@model EmployeeViewModel

<div class="row">
    <h3 style="float:left">@ViewBag.Subtitle2</h3>
</div>

<div class="row">
    <div class="container" style="display: inline-block">
        <form asp-action="Index">
            <input class="form-group form-control" style="float: left; width: 30%" type="text"
                   placeholder="Pesquisa por nome" name="searchString" />
            <input class="form-group" type="hidden" name="filter" value="@Model.CurrentFilter" />
            <button type="submit" class="btn btn-outline-success" style="float:left">Pesquisar</button>
        </form>

        <a class="btn btn-outline-dark" style="float: right" asp-controller="Employee"
            asp-action="Create">Criar novo</a>
        <a class="btn btn-info" style="float: right" asp-route-filter="@Model.ButtonAction">
            @Model.ButtonTitle
        </a>
    </div>
</div>

<div class="row">
    <div class="container">
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="row">@Html.DisplayNameFor(model => model.PagedEmployees.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.PagedEmployees.First().Section.Name)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in Model.PagedEmployees)
                {
                    <tr>
                        <td class="text-center">@employee.Name</td>
                        <td class="text-center">@employee.Section.Name</td>
                        <td class="text-center">
                            <a class="badge rounded-pill bg-info" asp-action="Details" asp-route-id="@employee.Id">Detalhes</a>
                            <a class="badge rounded-pill bg-info" asp-action="Edit" asp-route-id="@employee.Id">Editar</a>
                            <a class="badge rounded-pill bg-info" asp-action="Delete" asp-route-id="@employee.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container" style="display:inline-block">
    <h5 style="float:left">Página @Model.PagedEmployees.PageNumber de @Model.PagedEmployees.PageCount</h5>
    @Html.PagedListPager(Model.PagedEmployees, page => Url.Action("Index", new
    {
        filter = Model.CurrentFilter,
        searchString = Model.SearchString,
        page = page
    }), Bootstrap4PagedListRenderOptions.Classic)
</div>