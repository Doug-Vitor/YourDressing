<a asp-controller="Sections" asp-action="Index" class="nav-link active dropdown-toggle" data-toggle="dropdown"
    role="button" aria-expanded="false" aria-haspopup="true">
    Seções
</a>
<div class="dropdown-menu">
    @foreach (var item in Model)
    {
        <a class="dropdown-item" asp-controller="Sections" asp-action="Details" asp-route-id="@item.Id">
            @item.Name
        </a>
    }
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" asp-controller="Sections" asp-action="Index">Todas as seções</a>
</div>