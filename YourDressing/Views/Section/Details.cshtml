@model Section

@{
    ViewData["Title"] = "Administração de funcionários";
    ViewBag.Subtitle2 = "Detalhes da seção";
}

<div class="container" style="display: inline-block">
    <h3 style="float: left">@ViewBag.Subtitle2</h3>
    <a asp-action="SectionSales" class="btn btn-info" style="float: right" asp-route-id="@Model.Id">Vendas dessa seção</a>
    <a asp-action="SectionEmployees" class="btn btn-info" style="float:right" asp-route-id="@Model.Id">Funcionários dessa seção</a>
</div>

<div class="row">
    <div class="col-10">
        <label asp-for="@Model.Name" class="col-form-label mt-4"></label>
        <input class="form-control" style="width:250px" type="text" placeholder="@Model.Name" readonly="" />

        <label asp-for="@Model.Description" class="col-form-label mt-4"></label>
        <input class="form-control" type="text" readonly="" placeholder="@Model.Description" />

        <label asp-for="@Model.Situation" class="col-forml-label mt-4"></label>
        <input class="form-control" type="text" readonly="" placeholder="@EnumExtensions.GetDescription(Model.Situation)" />

        <a asp-action="Index" class="btn btn-outline-dark" style="float: right">Voltar</a>
        <a asp-action="Edit" class="btn btn-success" style="float:right" asp-route-id="@Model.Id">Editar</a>
    </div>
</div>