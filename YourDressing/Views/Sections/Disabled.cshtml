@model IEnumerable<Section>

@{ 
    ViewData["Title"] = "Administração de seções";
    ViewBag.Subtitle2 = "Seções desativadas";
}

<div class="row">
    <div class="container" style="display: inline-block">
        <h3 style="float: left">@ViewBag.Subtitle2</h3>
        <a asp-action="Index" class="btn btn-outline-dark" style="float: right">Todas as seções</a>
    </div>
</div>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr class="table-dark">
            <th scope="row">@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Section item in Model)
        {
            <tr>
                <td class="text-center">@item.Name</td>
                <td class="text-center" style="max-width:450px">@item.Description</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-dark text-decoration-underline" style="text-decoration: none">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-dark text-decoration-underline" style="text-decoration: none">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>