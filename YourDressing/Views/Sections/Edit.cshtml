@model Section

@{ 
    ViewData["Title"] = "Administração de seções";
    ViewBag.Subtitle2 = "Editar seção";
}

<h3>@ViewBag.Subtitle2</h3>

<div class="row">
    <div class="col-8">
        <form asp-action="Edit">
            <input type="hidden" asp-for="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label mt-4"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Description" class="col-form-label mt-4"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.Situation is SectionSituation.Disabled)
                {
                    <label asp-for="Situation" class="col-form-label mt-4"></label>
                    <select asp-for="Situation" asp-items="Html.GetEnumSelectList<SectionSituation>()"
                            class="form-control"></select>
                }
            </div>

            <div class="form-group">
                <a class="btn btn-outline-dark" style="float: right" asp-action="Index">Cancelar</a>
            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Confirmar" style="float: right" />
            </div>
        </form>
    </div>
</div>