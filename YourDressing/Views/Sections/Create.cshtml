@model Section

@{ 
    ViewData["Title"] = "Administração de seções";
    ViewBag.Subtitle2 = "Criar nova seção";
}

<h3>@ViewBag.Subtitle2</h3>

<div class="row">
    <div class="col-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label mt-4"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Description" class="col-form-label mt-4"></label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div>
                <a class="btn btn-outline-dark" style="float:right" asp-action="Index">Cancelar</a>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Confirmar" style="float:right" />
            </div>
        </form>
    </div>
</div>